<% set_meta_tags title: t('.title') %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class='text-center my-3'><%= t('.title') %><i class="bi bi-door-open-fill"></i></h1>

      <%= form_with(url: login_path, local: true) do |f| %>

        <div class="mb-3">
          <%= label_tag do %>
            <i class="bi bi-envelope-fill"></i> <%= User.human_attribute_name(:email) %>
          <% end %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= label_tag do %>
            <i class="bi bi-key-fill"></i> <%= User.human_attribute_name(:password) %>
          <% end %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <%= f.submit t('defaults.login'), class: 'btn btn-primary d-block mx-auto' %>
      <% end %>

      <div class='text-center mt-3'>
        <%= link_to t('.to_register_page'), new_user_path %>
        <span>/</span>
        <%= link_to t('.password_forget'),  new_password_reset_path %>
      </div>
    </div>
  </div>
</div>

