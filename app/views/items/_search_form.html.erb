<%= search_form_for @q, url: search_items_path do |f| %>
  <%= f.search_field :item_name_cont, class: 'form-control', placeholder: Item.human_attribute_name('item_name') %>
  <%= f.select :price_range, Item.price_ranges_i18n.invert.map{|key, value| [key, Item.price_ranges[value]]},
                { include_blank: t('defaults.unspecified') },
                class: 'form-control', placeholder: Item.human_attribute_name('price_range') %>
  <%= f.select :target_gender, Item.target_genders_i18n.invert.map{|key, value| [key, Item.target_genders[value]]},
                { include_blank: t('defaults.unspecified') },
                class: 'form-control', placeholder: Item.human_attribute_name('target_gender') %>
  <%= f.search_field :tags_tag_name_cont, class: 'form-control', placeholder: Tag.human_attribute_name('tag_name') %>
  <%= f.submit '検索', class: 'btn btn-primary' %>
<% end %>
