<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class='text-center my-3'>プロフィール編集 <i class="bi bi-pencil-fill"></i></h1>

      <%= form_with(model:@user, url: profiles_path, local: true) do |f| %>
        <%= render 'shared/errors', object: f.object %>

        <div class="mb-3">
          <%= label_tag do %>
            <i class="bi bi-person-circle"></i> <%= User.human_attribute_name(:name) %>
          <% end %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= label_tag do %>
            <i class="bi bi-envelope-fill"></i> <%= User.human_attribute_name(:email) %>
          <% end %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= label_tag do %>
            <i class="bi bi-key-fill"></i> <%= User.human_attribute_name(:password) %>
          <% end %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= label_tag do %>
            <i class="bi bi-key-fill"></i> <%= User.human_attribute_name(:password_confirmation) %>
          <% end %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= label_tag do %>
            <i class="bi bi-image-fill"></i> <%= User.human_attribute_name(:icon) %>
          <% end %>
          <%= f.file_field :icon, class: 'form-control', accept: 'image/*' %>
          <%= f.hidden_field :icon_cache %>
        </div>

        <%= f.submit class: 'btn btn-primary d-block mx-auto' %>
      <% end %>
    </div>
  </div>
</div>